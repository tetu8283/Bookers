<!--編集画面-->

<div>
<%= flash[:notice] %>
</div>

<h2>Editing Book</h2>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <div class="new-title">
      <label>Title</label>
        <div class="input-small">
           <%= f.text_field :title %>
        </div>
    </div>	
    
    <div class="new-body">
        <label>Body</label>
            <div class="input-big">
                <%= f.text_area :body %>
            </div>
    </div>
    
    <div class="submit-button">
        <%= f.submit 'Update Book' %>
    </div>
    
  <table>
        <tbody>
            <tr>
                 <td><%= link_to 'Show', book_path(@book.id) %></td>
                 <td><%= link_to 'Back', books_path %></td>
            </tr>
        </tbody>
    </table>
<% end %>
